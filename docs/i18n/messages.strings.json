{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/messages.schema.json",
  "title": "Messages per language",
  "type": "object",
  "required": ["lang", "version", "sentiments", "messages"],
  "additionalProperties": false,
  "properties": {
    "lang": { "type": "string" },
    "version": { "type": "integer", "minimum": 1 },
    "sentiments": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$",
            "description": "Canonical key; identiek over alle talen"
          },
          "label": { "type": "string" },
          "icon": { "type": "string", "description": "Emoji of short code", "default": "" }
        }
      }
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "text"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "integer", "minimum": 1 },
          "sentiment": {
            "type": "string",
            "description": "Moet verwijzen naar sentiments[].id",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "icon": { "type": "string", "default": "" },
          "text": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
